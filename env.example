# Multi-Platform Live Stream Configuration

# Server Configuration
PORT=3001

# Media Configuration
MEDIA_DIRECTORY=./media

# YouTube Live Stream
YOUTUBE_STREAM_KEY=your_youtube_stream_key_here

# Twitch Stream (optional)
TWITCH_STREAM_KEY=your_twitch_stream_key_here

# Facebook Live Stream (optional)
FACEBOOK_STREAM_KEY=your_facebook_stream_key_here

# Default Platform (youtube, twitch, facebook, multi)
DEFAULT_PLATFORM=youtube

# Enable Multi-Platform Streaming by default
MULTI_PLATFORM=false 